extends layout

block content
    main#result
        #overallRGB(style=`background-color: rgb(${totalColourModes.RGB});`)
        #resultRGB
            each image in imageData
                div.block(style=`background-color: rgb(${image.RGB});`)
        - if (totalLuminance < 0.5)
            #overallInfo.bright
                +info
        - else
            #overallInfo
                +info
    script(type="text/javascript" src="/scripts/result.js")

mixin info
    p= "RGB: "
        +generateColourModeString(totalColourModes.RGB, 0)
    p= `HEX: #${totalColourModes.HEX}`
    p= "CMYK: "
        +generateColourModeString(totalColourModes.CMYK, 4)
    p= `HSL: ${totalColourModes.HSL[0].toFixed(2)}Â°, ${(totalColourModes.HSL[1] * 100).toFixed(2)}%, ${(totalColourModes.HSL[2] * 100).toFixed(2)}%`
    p= `Luminance: ${totalLuminance.toFixed(2)}`
    - if (imageData.length === 0)
        - text = "No image were detected."
    p= `Analysed ${totalPixels} pixels across ${imageData.length} image(s) in ${(timeTaken * 0.001).toFixed(2)} seconds.`

mixin generateColourModeString(arr, acc)
    - var i = 0
    each val in arr
        - if (i == arr.length - 1)
            span=val.toFixed(acc)
        - else
            span=val.toFixed(acc) + ", "
        - i++